<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--    servlets  -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>controller.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BillPayment</servlet-name>
        <servlet-class>controller.servlets.BillPaymentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>controller.servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Client</servlet-name>
        <servlet-class>controller.servlets.ClientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreditRequest</servlet-name>
        <servlet-class>controller.servlets.CreditRequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Credit</servlet-name>
        <servlet-class>controller.servlets.CreditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Successful</servlet-name>
        <servlet-class>controller.servlets.SuccessfulServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeAdmin</servlet-name>
        <servlet-class>controller.servlets.admin_servlets.HomeAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Deposit</servlet-name>
        <servlet-class>controller.servlets.DepositServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Refill</servlet-name>
        <servlet-class>controller.servlets.RefillServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreditRequestAdmin</servlet-name>
        <servlet-class>controller.servlets.admin_servlets.CreditRequestAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Transfer</servlet-name>
        <servlet-class>controller.servlets.TransferServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoggedIn</servlet-name>
        <servlet-class>controller.servlets.LoggedInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PayArrears</servlet-name>
        <servlet-class>controller.servlets.PayArrearsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LimitRequest</servlet-name>
        <servlet-class>controller.servlets.LimitRequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LimitRequestAdmin</servlet-name>
        <servlet-class>controller.servlets.admin_servlets.LimitRequestAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RefillListClient</servlet-name>
        <servlet-class>controller.servlets.RefillListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateTerm</servlet-name>
        <servlet-class>controller.servlets.UpdateTermServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OperationListClient</servlet-name>
        <servlet-class>controller.servlets.OperationListClientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OpenDeposit</servlet-name>
        <servlet-class>controller.servlets.OpenDepositServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PayInterestCharges</servlet-name>
        <servlet-class>controller.servlets.PayInterestChargesServlet</servlet-class>
    </servlet>

    <!--    servlet mapping   -->
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BillPayment</servlet-name>
        <url-pattern>/bill_payment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Client</servlet-name>
        <url-pattern>/client_accounts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreditRequest</servlet-name>
        <url-pattern>/credit_request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Successful</servlet-name>
        <url-pattern>/refill/successful</url-pattern>
        <url-pattern>/transfer/successful</url-pattern>
        <url-pattern>/bill_payment/successful</url-pattern>
        <url-pattern>/credit_request/successful</url-pattern>
        <url-pattern>/limit_request/successful</url-pattern>
        <url-pattern>/update_term/successful</url-pattern>
        <url-pattern>/open_deposit/successful</url-pattern>
        <url-pattern>/pay_interest_charges/successful</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeAdmin</servlet-name>
        <url-pattern>/home_admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Credit</servlet-name>
        <url-pattern>/credit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Deposit</servlet-name>
        <url-pattern>/deposit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Refill</servlet-name>
        <url-pattern>/refill</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreditRequestAdmin</servlet-name>
        <url-pattern>/credit_request_admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Transfer</servlet-name>
        <url-pattern>/transfer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoggedIn</servlet-name>
        <url-pattern>/logged_in</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PayArrears</servlet-name>
        <url-pattern>/pay_arrears</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LimitRequest</servlet-name>
        <url-pattern>/limit_request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LimitRequestAdmin</servlet-name>
        <url-pattern>/limit_request_admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RefillListClient</servlet-name>
        <url-pattern>/refill_list_client</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateTerm</servlet-name>
        <url-pattern>/update_term</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OperationListClient</servlet-name>
        <url-pattern>/operation_list_client</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OpenDeposit</servlet-name>
        <url-pattern>/open_deposit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PayInterestCharges</servlet-name>
        <url-pattern>/pay_interest_charges</url-pattern>
    </servlet-mapping>

    <!--    error pages-->
    <error-page>
        <error-code>403</error-code>
        <location>/jsp/errors/403.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/errors/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/jsp/errors/500.jsp</location>
    </error-page>

    <!--    filters    -->
    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>filters.LogFilter</filter-class>
    </filter>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>filters.EncodingFilter</filter-class>
    </filter>

    <filter>
        <filter-name>LocalizationFilter</filter-name>
        <filter-class>filters.LocalizationFilter</filter-class>
    </filter>

    <filter>
        <filter-name>Login</filter-name>
        <filter-class>filters.LoginFilter</filter-class>
    </filter>

    <filter>
        <filter-name>Registration</filter-name>
        <filter-class>filters.RegistrationFilter</filter-class>
    </filter>

    <!--    filters mapping   -->
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>LocalizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>Login</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>Registration</filter-name>
        <url-pattern>/registration</url-pattern>
    </filter-mapping>

    <!--welcome page-->
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>

    <!--    listener  -->
    <listener>
        <listener-class>listener.BankContextListener</listener-class>
    </listener>
</web-app>
